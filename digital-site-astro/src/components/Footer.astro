---
const currentYear = new Date().getFullYear();

const contactInfo = {
  phone: '+54 9 3442 45-7061',
  email: 'clientes@videodigital.com.ar',
  address: 'Intendente Gonzalez 2479'
};

const services = [
  { name: 'Planes Hogar', link: '/#planes' },
  { name: 'Internet Fibra', link: '/#internet' },
  { name: 'TV Digital', link: '/#tv' },
  { name: 'Corporativo', link: '/planes-corporativos' }
];

const legal = [
  { name: 'Términos y Condiciones', link: '#' },
  { name: 'Política de Privacidad', link: '#' },
  { name: 'Botón de Arrepentimiento', link: '#' }
];

const socialMedia = [
  { name: 'Facebook', icon: 'facebook', link: '#' },
  { name: 'Instagram', icon: 'instagram', link: '#' },
  { name: 'WhatsApp', icon: 'whatsapp', link: 'https://wa.me/5493442457061' }
];
---

<footer class="footer">
  <div class="footer-main">
    <div class="container-wide">
      <div class="footer-grid">
        <!-- Columna 1: Logo y Contacto -->
        <div class="footer-column">
          <div class="footer-logo">
            <img src="/images/logo-videodigital.png" alt="VideoDigital" class="logo-img-footer" />
          </div>
          <p class="footer-description">
            Conectividad de alta velocidad para hogares, comercios y empresas.
          </p>
          <div class="contact-info">
            <div class="contact-item">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
              </svg>
              <span>{contactInfo.phone}</span>
            </div>
            <div class="contact-item">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
              <span>{contactInfo.email}</span>
            </div>
            <div class="contact-item">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
              <span>{contactInfo.address}</span>
            </div>
          </div>
        </div>

        <!-- Columna 2: Servicios -->
        <div class="footer-column">
          <h3 class="footer-title">Servicios</h3>
          <ul class="footer-links">
            {services.map(service => (
              <li>
                <a href={service.link}>{service.name}</a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Columna 3: Legal -->
        <div class="footer-column">
          <h3 class="footer-title">Legal</h3>
          <ul class="footer-links">
            {legal.map(item => (
              <li>
                <a href={item.link}>{item.name}</a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Columna 4: Redes Sociales -->
        <div class="footer-column">
          <h3 class="footer-title">Síguenos</h3>
          <div class="social-links">
            {socialMedia.map(social => (
              <a href={social.link} aria-label={social.name} class="social-link">
                {social.icon === 'facebook' && (
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                )}
                {social.icon === 'instagram' && (
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                    <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                  </svg>
                )}
                {social.icon === 'whatsapp' && (
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                  </svg>
                )}
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <div class="container-wide">
      <p class="copyright">
        © {currentYear} VideoDigital. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: linear-gradient(135deg, #003d66 0%, #004d99 100%);
    color: var(--color-white);
  }

  .footer-main {
    padding: var(--spacing-4xl) 0 var(--spacing-2xl);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: var(--spacing-3xl);
  }

  .footer-column {
    display: flex;
    flex-direction: column;
  }

  /* Logo */
  .footer-logo {
    margin-bottom: var(--spacing-lg);
  }

  .logo-img-footer {
    height: 60px;
    width: auto;
    filter: brightness(0) invert(1); /* Make logo white for dark footer */
  }

  .logo-text {
    font-size: var(--font-size-3xl);
    font-weight: 800;
    color: var(--color-white);
  }

  .logo-accent {
    color: var(--color-green-accent);
  }

  .footer-description {
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: var(--spacing-xl);
    line-height: 1.6;
  }

  /* Contact Info */
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    color: rgba(255, 255, 255, 0.9);
    font-size: var(--font-size-sm);
  }

  .contact-item svg {
    flex-shrink: 0;
    color: var(--color-green-accent);
  }

  /* Footer Titles */
  .footer-title {
    font-size: var(--font-size-lg);
    font-weight: 700;
    color: var(--color-white);
    margin-bottom: var(--spacing-lg);
  }

  /* Footer Links */
  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .footer-links a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: color var(--transition-base);
    font-size: var(--font-size-base);
  }

  .footer-links a:hover {
    color: var(--color-green-accent);
  }

  /* Social Links */
  .social-links {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: var(--color-white);
    transition: all var(--transition-base);
    text-decoration: none;
  }

  .social-link:hover {
    background-color: var(--color-green-accent);
    transform: translateY(-3px);
    color: var(--color-white);
  }

  /* Footer Bottom */
  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: var(--spacing-xl) 0;
  }

  .copyright {
    text-align: center;
    color: rgba(255, 255, 255, 0.7);
    margin: 0;
    font-size: var(--font-size-sm);
  }

  /* Responsive */
  @media (max-width: 992px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: var(--spacing-2xl);
    }
  }

  @media (max-width: 576px) {
    .footer-main {
      padding: var(--spacing-2xl) 0;
    }

    .footer-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-2xl);
    }

    .footer-column {
      text-align: center;
    }

    .contact-info {
      align-items: center;
    }

    .footer-links {
      align-items: center;
    }

    .social-links {
      justify-content: center;
    }
  }
</style>
