---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import WhatsappButton from '../components/WhatsappButton.astro';

const plans = [
  {
    name: 'Plan Empresarial',
    description: 'Ideal para pequeñas y medianas empresas',
    icon: 'building',
    features: [
      'Internet dedicado hasta 500 Mbps',
      'IP fija incluida',
      'Soporte técnico prioritario 24/7',
      'Router empresarial de alta gama',
      'SLA (Service Level Agreement) garantizado',
      'Sin límite de datos',
      'Instalación y configuración gratuita'
    ]
  },
  {
    name: 'Plan Corporativo',
    description: 'Para grandes empresas y corporaciones',
    icon: 'building2',
    features: [
      'Internet dedicado hasta 1 Gbps simétrico',
      'Múltiples IPs fijas',
      'Soporte técnico dedicado 24/7/365',
      'Infraestructura redundante',
      'SLA 99.9% de disponibilidad garantizada',
      'Monitoreo proactivo',
      'Consultoría de redes incluida',
      'Balanceo de carga avanzado'
    ]
  },
  {
    name: 'Plan Personalizado',
    description: 'Soluciones a medida para tus necesidades',
    icon: 'settings',
    features: [
      'Ancho de banda personalizado',
      'Diseño de red específico',
      'Integración con infraestructura existente',
      'Soporte empresarial premium',
      'Consultoría y asesoramiento',
      'Escalabilidad garantizada',
      'Acuerdos de servicio personalizados'
    ]
  }
];
---

<Layout title="Soluciones Corporativas - VideoDigital">
  <Navbar />
  
  <main>
    <section class="corporate-hero">
      <div class="container">
        <h1 class="hero-title">Soluciones Corporativas y Empresariales</h1>
        <p class="hero-subtitle">
          Conectividad de nivel empresarial con el respaldo que tu negocio necesita
        </p>
      </div>
    </section>

    <section class="corporate-plans-section section">
      <div class="container">
        <div class="plans-corporate-grid">
          {plans.map(plan => (
            <div class="corporate-plan-card">
              <div class="plan-icon">
                {plan.icon === 'building' && (
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="4" y="2" width="16" height="20" rx="2" ry="2"/>
                    <path d="M9 22v-4h6v4"/>
                    <path d="M8 6h.01"/>
                    <path d="M16 6h.01"/>
                    <path d="M12 6h.01"/>
                    <path d="M12 10h.01"/>
                    <path d="M12 14h.01"/>
                    <path d="M16 10h.01"/>
                    <path d="M16 14h.01"/>
                    <path d="M8 10h.01"/>
                    <path d="M8 14h.01"/>
                  </svg>
                )}
                {plan.icon === 'building2' && (
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 21h18"/>
                    <path d="M9 8h1"/>
                    <path d="M9 12h1"/>
                    <path d="M9 16h1"/>
                    <path d="M14 8h1"/>
                    <path d="M14 12h1"/>
                    <path d="M14 16h1"/>
                    <path d="M5 21V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v16"/>
                  </svg>
                )}
                {plan.icon === 'settings' && (
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="3"/>
                    <path d="M12 1v6m0 6v6"/>
                    <path d="m4.93 4.93 4.24 4.24m5.66 5.66 4.24 4.24"/>
                    <path d="M1 12h6m6 0h6"/>
                    <path d="m4.93 19.07 4.24-4.24m5.66-5.66 4.24-4.24"/>
                  </svg>
                )}
              </div>
              
              <h3 class="corporate-plan-name">{plan.name}</h3>
              <p class="corporate-plan-description">{plan.description}</p>

              <ul class="corporate-features">
                {plan.features.map(feature => (
                  <li class="corporate-feature-item">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="20 6 9 17 4 12"/>
                    </svg>
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>

              <button class="btn btn-primary btn-corporate">
                Solicitar cotización
              </button>
            </div>
          ))}
        </div>

        <div class="contact-cta">
          <h2>¿Necesitas una solución personalizada?</h2>
          <p>Nuestro equipo de especialistas está listo para diseñar la mejor solución para tu empresa</p>
          <button class="btn btn-red btn-large">Contactar con un especialista</button>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
  <WhatsappButton />
</Layout>

<style>
  .corporate-hero {
    background: linear-gradient(135deg, var(--color-blue-primary) 0%, var(--color-blue-dark) 100%);
    padding: 120px 0 80px;
    text-align: center;
    color: var(--color-white);
  }

  .hero-title {
    font-size: var(--font-size-5xl);
    font-weight: 800;
    margin-bottom: var(--spacing-lg);
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: var(--font-size-xl);
    max-width: 700px;
    margin: 0 auto;
    opacity: 0.95;
  }

  .corporate-plans-section {
    padding: var(--spacing-4xl) 0;
  }

  .plans-corporate-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--spacing-3xl);
    margin-bottom: var(--spacing-4xl);
  }

  .corporate-plan-card {
    background-color: var(--color-white);
    border-radius: 24px;
    padding: 40px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
    transition: all 0.4s ease;
    border: 1px solid rgba(0, 0, 0, 0.05);
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
  }

  .corporate-plan-card:hover {
    transform: translateY(-12px);
    box-shadow: 0 20px 60px rgba(0, 102, 204, 0.15);
    border-color: rgba(0, 102, 204, 0.1);
  }

  .corporate-plan-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 6px;
    background: linear-gradient(90deg, var(--color-blue-light), var(--color-blue-primary));
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .corporate-plan-card:hover::before {
    opacity: 1;
  }

  .plan-icon {
    width: 90px;
    height: 90px;
    background: rgba(0, 102, 204, 0.05);
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-blue-primary);
    margin-bottom: 24px;
    transition: all 0.3s ease;
  }

  .corporate-plan-card:hover .plan-icon {
    background: linear-gradient(135deg, var(--color-blue-primary), var(--color-blue-dark));
    color: var(--color-white);
    transform: scale(1.1) rotate(5deg);
  }

  .corporate-plan-name {
    font-size: 1.75rem;
    font-weight: 800;
    color: var(--color-text-primary);
    margin-bottom: 8px;
    letter-spacing: -0.5px;
  }

  .corporate-plan-description {
    color: var(--color-text-secondary);
    font-size: 1.05rem;
    margin-bottom: 32px;
    padding-bottom: 24px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    line-height: 1.6;
  }

  .corporate-features {
    list-style: none;
    padding: 0;
    margin-bottom: 40px;
    flex-grow: 1;
  }

  .corporate-feature-item {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 16px;
    color: var(--color-text-secondary);
    line-height: 1.5;
    font-weight: 500;
  }

  .corporate-feature-item svg {
    flex-shrink: 0;
    color: var(--color-green-accent);
    background-color: rgba(0, 204, 102, 0.1);
    padding: 2px;
    border-radius: 50%;
    width: 24px;
    height: 24px;
  }

  .btn-corporate {
    width: 100%;
  }

  /* Contact CTA */
  .contact-cta {
    text-align: center;
    padding: var(--spacing-4xl);
    background: linear-gradient(135deg, var(--color-bg-light) 0%, var(--color-white) 100%);
    border-radius: var(--border-radius-xl);
    box-shadow: var(--shadow-md);
  }

  .contact-cta h2 {
    font-size: var(--font-size-3xl);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-md);
  }

  .contact-cta p {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-2xl);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .corporate-hero {
      padding: 100px 0 60px;
    }

    .hero-title {
      font-size: var(--font-size-3xl);
    }

    .hero-subtitle {
      font-size: var(--font-size-base);
    }

    .plans-corporate-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-2xl);
    }

    .contact-cta {
      padding: var(--spacing-2xl);
    }
  }
</style>
